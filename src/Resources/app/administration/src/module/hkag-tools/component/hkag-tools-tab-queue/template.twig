<sw-card-view>
    <sw-card
            class="hkag-tools-tab-queue__manager-card"
            :title="$tc('hkag-tools.tabs.queue.title')"
            :isLoading="isLoading"
            :large="true"
            positionIdentifier="hkag-tools-tab-queue"
    >
        <template #toolbar>
            <sw-button variant="ghost" @click="refresh"><sw-icon :small="true" name="regular-undo"></sw-icon></sw-button>
            <sw-button variant="danger" @click="showResetModal = true">{{ $tc('hkag-tools.resetQueue') }}</sw-button>
        </template>

        <sw-data-grid
            :showSelection="false"
            :dataSource="queueEntries"
            :columns="columns"
            :showActions="false"
        >
        </sw-data-grid>
    </sw-card>

    <sw-modal v-if="showResetModal" :title="$tc('hkag-tools.tabs.queue.reset.modal.title')" variant="small" @modal-close="showResetModal = false">
        {{ $tc('hkag-tools.tabs.queue.reset.modal.description') }}

        <template #modal-footer>
            <sw-button @click="showResetModal = false">{{ $tc('global.default.cancel') }}</sw-button>
            <sw-button variant="danger" @click="resetQueue">{{ $tc('hkag-tools.tabs.queue.reset.modal.reset') }}</sw-button>
        </template>
    </sw-modal>
</sw-card-view>
