<sw-card-view>
    <sw-card
            class="hkag-tools-tab-index__health-card"
            :isLoading="isLoading"
            :large="true"
            positionIdentifier="hkag-tools-tab-index"
    >

        <template #toolbar>
            <!-- @todo: Make the refresh button fancy -->
            <sw-button variant="ghost" @click="refresh">
                <sw-icon :small="true" name="regular-undo"></sw-icon>
            </sw-button>
        </template>

        <sw-card
                class="hkag-tools-tab-index__health-card"
                :title="$tc('hkag-tools.tabs.index.title')"
                :large="true"
                positionIdentifier="hkag-tools-tab-index-health"
        >
            <sw-data-grid
                v-if="health"
                :showSelection="false"
                :showActions="false"
                :dataSource="health"
                :columns="columns">

                <template #column-current="{ item }">
                    <template>
                        <sw-label variant="warning" appearance="pill" v-if="item.state === 'STATE_WARNING'">
                            {{ $tc('hkag-tools.warning') }}
                        </sw-label>
                        <sw-label variant="danger" appearance="pill" v-if="item.state === 'STATE_ERROR'">
                            {{ $tc('hkag-tools.error') }}
                        </sw-label>
                        <sw-label variant="info" appearance="pill" v-if="item.state === 'STATE_INFO'">
                            {{ $tc('hkag-tools.info') }}
                        </sw-label>
                    </template>

                    <template>
                        {{ item.current }}
                    </template>
                </template>

                <template #column-name="{ item }">
                    {{ item.snippet }}

                    <template v-if="item.url">
                        &nbsp;<a :href="item.url" target="_blank">Info</a>
                    </template>
                </template>
            </sw-data-grid>
        </sw-card>

        <sw-card
                class="hkag-tools-tab-index__performance-card"
                :title="$tc('hkag-tools.tabs.index.performance')"
                :large="true"
                positionIdentifier="hkag-tools-tab-index-performance"
        >
            <sw-alert v-if="performanceStatus && performanceStatus.length === 0"
                      variant="success">
                {{ $tc('hkag-tools.noRecommendations') }}
            </sw-alert>

            <sw-data-grid
                v-if="performanceStatus && performanceStatus.length > 0"
                :showSelection="false"
                :showActions="false"
                :dataSource="performanceStatus"
                :columns="columns">

                <template #column-current="{ item }">
                    <template>
                        <sw-label variant="warning" appearance="pill" v-if="item.state === 'STATE_WARNING'">
                            {{ $tc('hkag-tools.warning') }}
                        </sw-label>
                        <sw-label variant="danger" appearance="pill" v-if="item.state === 'STATE_ERROR'">
                            {{ $tc('hkag-tools.error') }}
                        </sw-label>
                        <sw-label variant="info" appearance="pill" v-if="item.state === 'STATE_INFO'">
                            {{ $tc('hkag-tools.info') }}
                        </sw-label>
                    </template>

                    <template>
                        {{ item.current }}
                    </template>
                </template>

                <template #column-name="{ item }">
                    {{ item.snippet }}

                    <template v-if="item.url">
                        &nbsp;<a :href="item.url" target="_blank">Info</a>
                    </template>
                </template>
            </sw-data-grid>
        </sw-card>
    </sw-card>
</sw-card-view>
